{
  if (alignment == ALIGN_DEFAULT) {
    Class declaring=getClass().getDeclaringClass();
    if (declaring != null)     alignment=Native.getStructureAlignment(declaring);
    if (alignment == ALIGN_DEFAULT) {
      if (Platform.isWindows())       alignment=ALIGN_MSVC;
 else       alignment=ALIGN_GNUC;
    }
  }
  alignType=alignment;
  size=CALCULATE_SIZE;
  memory=null;
}
