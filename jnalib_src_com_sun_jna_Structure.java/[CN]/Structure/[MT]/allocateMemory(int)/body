{
  if (size == CALCULATE_SIZE) {
    size=calculateSize(false);
  }
 else   if (size <= 0) {
    throw new IllegalArgumentException("Structure size must be greater than zero: " + size);
  }
  if (size != CALCULATE_SIZE) {
    memory=new Memory(size);
    memory.clear(size);
    this.size=size;
    if (this instanceof ByValue) {
      getTypeInfo();
    }
  }
}
