{
  if (Structure.class.isAssignableFrom(type)) {
    Structure s=(Structure)value;
    return s.size();
  }
  if (type.isArray()) {
    int len=Array.getLength(value);
    if (len > 0) {
      Object o=Array.get(value,0);
      return len * getNativeSize(type.getComponentType(),o);
    }
  }
  return getNativeSize(type);
}
