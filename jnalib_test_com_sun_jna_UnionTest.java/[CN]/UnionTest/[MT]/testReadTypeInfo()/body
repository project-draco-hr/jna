{
  SizedUnion u=new SizedUnion();
  if (Native.POINTER_SIZE == 4) {
    assertEquals("Type size should be that of longest field if no field active",Structure.getTypeInfo(BigTestStructure.class).getInt(0),u.getTypeInfo().getInt(0));
  }
 else {
    assertEquals("Type size should be that of longest field if no field active",Structure.getTypeInfo(BigTestStructure.class).getLong(0),u.getTypeInfo().getLong(0));
  }
  u.setType(int.class);
  if (Native.POINTER_SIZE == 4) {
    assertEquals("Type size should be that of longest field if field active",Structure.getTypeInfo(BigTestStructure.class).getInt(0),u.getTypeInfo().getInt(0));
  }
 else {
    assertEquals("Type size should be that of longest field if field active",Structure.getTypeInfo(BigTestStructure.class).getLong(0),u.getTypeInfo().getLong(0));
  }
}
