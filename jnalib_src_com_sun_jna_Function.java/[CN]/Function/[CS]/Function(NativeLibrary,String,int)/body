{
  checkCallingConvention(callingConvention);
  if (functionName == null)   throw new NullPointerException("Function name must not be null");
  this.library=library;
  this.functionName=functionName;
  this.callingConvention=callingConvention;
  try {
    this.peer=library.getSymbolAddress(functionName);
  }
 catch (  UnsatisfiedLinkError e) {
    throw new UnsatisfiedLinkError("Error looking up function '" + functionName + "': "+ e.getMessage());
  }
}
